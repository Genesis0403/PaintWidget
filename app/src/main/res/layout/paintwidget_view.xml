<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
       xmlns:app="http://schemas.android.com/apk/res-auto"
       xmlns:tools="http://schemas.android.com/tools"
       tools:parentTag="androidx.constraintlayout.widget.ConstraintLayout"
       tools:layout_height="156dp"
       tools:layout_width="214dp"
       android:background="#F1F1F1"
>

    <TextView
            android:text="@string/widthText"
            android:textColor="#727272"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:layout_editor_absoluteX="16dp"
            android:id="@+id/widthText"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="16dp"
            android:layout_marginStart="8dp"
    />
    <TextView
            android:text="@string/defaultWidthText"
            android:textSize="16sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/widthNumber"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBaseline_toBaselineOf="@+id/widthText"
            android:layout_marginEnd="8dp"
    />
    <SeekBar
            android:layout_width="190dp"
            android:layout_height="wrap_content"
            android:id="@+id/widthSeekBar"
            app:layout_constraintTop_toBottomOf="@+id/widthText"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="16dp"
            android:layout_marginStart="8dp"
            android:splitTrack="false"
            android:progress="60"
            android:thumb="@drawable/seek_thumb"
            android:progressDrawable="@drawable/seek_style"
    />
    <TextView
            android:text="@string/colorsText"
            android:textColor="#727272"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/colorsText"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/widthSeekBar"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"/>
    <RadioGroup
            android:id="@+id/radioGroup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="16dp"
            app:layout_constraintBottom_toBottomOf="parent">

        <RadioButton
                android:id="@+id/firstRadioButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="32dp"
                android:button="@drawable/first_radiobutton_selector"
        />
        <RadioButton
                android:id="@+id/secondRadioButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="32dp"
                android:checked="false"
                android:button="@drawable/second_radiobutton_selector"
        />
        <RadioButton
                android:id="@+id/thirdRadioButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="32dp"
                android:button="@drawable/third_radiobutton_selector"
        />
        <RadioButton
                android:id="@+id/fourthRadioButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:button="@drawable/fourth_radiobutton_selector"
        />
    </RadioGroup>

</merge>